<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <div class="hero-unit">
    <section>
      <h3>
      <%= @user.name %>
    </h3>
    </section>
    <section>
      <h5>
        <%= gravatar_for @user %>

      </h5>
    </section>
    <section>
      <p>
        <%= @user.school %>
        <%= auto_link(@user.email) %>
      </p>
    </section>
  </aside>
  <div class="span8">
    <% if @user.microposts.any? %>
    <div class=" hero-unit">
      <center><img src="/assets/logo.jpg" alt="logo"></center>
      
      
      <ol class="microposts">
        
        <%= render @microposts %>

      </ol>
      <%= will_paginate @microposts %>
    </div>
    <% end %>
  </div>
</div>