<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <div class="hero-unit">
    <section>
      <h5>
        <%= gravatar_for @user %>
        <%= @user.name %>

      </h5>
      <h6>
      <p>
        <%= @user.school %>
      </P>
      <p>
        <%= @user.email %>
      </p>
    </h6>
    </section>
  </aside>
  <div class="span8">
    <% if @user.microposts.any? %>
      <h1>Microposts (<%= @user.microposts.count %>)</h1>
      <ol class="microposts">
        <div class="center hero-unit">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>